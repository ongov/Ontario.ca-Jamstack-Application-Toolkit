{% if globals.useApplicationHeader %}

<div class="ontario-header__container">
        <header class="ontario-application-header ontario-header" id="ontario-header">
            <div class="ontario-row">
                <div class="ontario-columns ontario-small-6 ontario-application-header__logo">
                    <a href="https://www.ontario.ca/page/government-ontario">
                        <img src="{{ globals.siteRoot }}{{ globals.designSystemRoot }}/logos/ontario-logo--desktop.svg" alt="Government of Ontario" />
                    </a>
                </div>
                <div class="ontario-columns ontario-small-6 ontario-application-header__lang-toggle">
                    <a href="{{ globals.siteRoot }}{{ fr_page_url }}" class="ontario-header__language-toggler ontario-header-button ontario-header-button--without-outline">
                        <abbr title="{{ 'header.langToggle.langFull' | localeString }}" class="ontario-show-for-small-only">
                            {{ 'header.langToggle.langAbbr' | localeString }}
                        </abbr>
                        <span class="ontario-show-for-medium">
                            {{ 'header.langToggle.langFull' | localeString }}
                        </span>
                    </a>
                </div>
            </div>
        </header>
        {% include "app/_header_en_application-subheader.njk" %}
{% else %}
<div class="ontario-header__container">
        <header class="ontario-header" id="ontario-header">
            <div class="ontario-row">
                <div class="ontario-header__logo-container ontario-columns ontario-small-2 ontario-medium-4 ontario-large-3">
                    <a href="https://www.ontario.ca/page/government-ontario">
                        <img class="ontario-show-for-medium" src="{{ globals.siteRoot }}{{ globals.designSystemRoot }}/logos/ontario-logo--desktop.svg" alt="Government of Ontario" />
                        <img class="ontario-show-for-small-only" src="{{ globals.siteRoot }}{{ globals.designSystemRoot }}/logos/ontario-logo--mobile.svg" alt="Government of Ontario" />
                    </a>
                </div>

                <form name="searchForm" id="ontario-search-form-container" onsubmit="return false" class="ontario-header__search-container ontario-columns ontario-small-10 ontario-medium-offset-3 ontario-medium-6 ontario-large-offset-0 ontario-large-6" novalidate>
                    <label for="ontario-search-input-field" class="ontario-show-for-sr">Search</label>
                    <input type="text" name="search" id="ontario-search-input-field" autocomplete="off" aria-autocomplete="none" class="ontario-input ontario-header__search-input" required />
                    <input class="ontario-header__search-reset" id="ontario-search-reset" type="reset" value="" aria-label="Clear field" />
                    <button class="ontario-header__search-submit" id="ontario-search-submit" type="submit" onclick="doSearch()">
                        <span class="ontario-show-for-sr">{{ 'header.submit' | localeString }}</span>
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-search"></use>
                        </svg>
                    </button>
                </form>
                <div class="ontario-header__nav-right-container ontario-columns ontario-small-10 ontario-medium-8 ontario-large-3">
                    <a href="{{ globals.siteRoot }}{{ fr_page_url }}" class="ontario-header__language-toggler ontario-header-button ontario-header-button--without-outline">
                        <abbr title="{{ 'header.langToggle.langFull' | localeString }}" class="ontario-show-for-small-only">
                            {{ 'header.langToggle.langAbbr' | localeString }}
                        </abbr>
                        <span class="ontario-show-for-medium">
                            {{ 'header.langToggle.langFull' | localeString }}
                        </span>
                    </a>

                    <button type="button" class="ontario-header__search-toggler ontario-header-button ontario-header-button--without-outline ontario-hide-for-large" id="ontario-header-search-toggler" aria-controls="ontario-search-form-container">
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-search"></use>
                        </svg>
                        <span class="ontario-show-for-medium ontario-show">
                            Search
                        </span>
                    </button>

                    <button type="button" class="ontario-header__menu-toggler ontario-header-button ontario-header-button--with-outline" id="ontario-header-menu-toggler" aria-controls="ontario-navigation" aria-label="open menu">
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-menu"></use>
                        </svg>

                        <span>Menu</span>
                    </button>
                </div>
                <div class="ontario-header__search-close-container ontario-columns ontario-small-2 ontario-medium-3">
                    <button type="button" class="ontario-header__search-close ontario-header-button ontario-header-button--without-outline" id="ontario-header-search-close" aria-label="close search bar">
                        <span aria-hidden="true">close</span>
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-close"></use>
                        </svg>
                    </button>
                </div>
            </div>
        </header>
        <nav class="ontario-navigation" id="ontario-navigation">
            <button type="button" class="ontario-header__menu-toggler ontario-header-button ontario-header-button--with-outline" id="ontario-header-nav-toggler" aria-controls="ontario-navigation" aria-label="close">
                <svg class="ontario-icon" focusable="false" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                    <use xlink:href="#ontario-icon-close"></use>
                </svg>
                <span>Menu</span>
            </button>
            <div class="ontario-navigation__container">
                <ul>
                    {% include "core/_header_en_nav-menu-items.njk" %}
                </ul>
            </div>
        </nav>
    </div>
{% endif %}