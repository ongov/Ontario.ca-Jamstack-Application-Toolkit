{% if globals.useApplicationHeader %}
<div class="ontario-header__container">
        <header class="ontario-application-header ontario-header" id="ontario-header">
            <div class="ontario-row">
                <div class="ontario-columns ontario-small-6 ontario-application-header__logo">
                    <a href="https://www.ontario.ca/fr/page/gouvernement-de-lontario">
                        <img src="{{ globals.siteRoot }}{{ globals.designSystemRoot }}/logos/ontario-logo--desktop.svg" alt="Gouvernement de l’Ontario" />
                    </a>
                </div>
                <div class="ontario-columns ontario-small-6 ontario-application-header__lang-toggle">
                    <a href="{{ globals.siteRoot }}{{ en_page_url }}" class="ontario-header__language-toggler ontario-header-button ontario-header-button--without-outline">
                        <abbr title="English" class="ontario-show-for-small-only">
                            EN
                        </abbr>
                        <span class="ontario-show-for-medium">
                            English
                        </span>
                    </a>
                </div>
            </div>
        </header>
        <div class="ontario-application-subheader-menu__container">
            <section class="ontario-application-subheader">
                <div class="ontario-row">
                    <div class="ontario-columns ontario-small-12 ontario-application-subheader__container">
                        <p class="ontario-application-subheader__heading">
                            <a href="#">Nom de l&#x27;application</a>
                        </p>

                        <div class="ontario-application-subheader__menu-container">
                            <ul class="ontario-application-subheader__menu ontario-show-for-large">
                                <li><a href="#">Lien 1</a></li>
                                <li><a href="#">Lien 2</a></li>
                                <li><a href="#">Lien 3</a></li>
                                <li><a href="#">Lien 4</a></li>
                                <li><a href="#">Lien 5</a></li>
                            </ul>
                            <ul class="ontario-application-subheader__menu ontario-hide-for-small ontario-show-for-medium ontario-hide-for-large">
                                <li><a href="#">Lien 1</a></li>
                                <li><a href="#">Lien 2</a></li>
                            </ul>

                            <button class="ontario-header__menu-toggler ontario-header-button ontario-header-button--with-outline" id="ontario-header-menu-toggler" aria-controls="ontario-navigation" aria-label="ouvrir les sujets" type="button">
                                <svg class="ontario-icon" focusable="false" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                                    <use xlink:href="#ontario-icon-menu"></use>
                                </svg>
                                <span>Sujets</span>
                            </button>
                        </div>
                    </div>
                </div>
            </section>
            <nav class="ontario-navigation" id="ontario-navigation">
                <button class="ontario-header__menu-toggler ontario-header-button ontario-header-button--with-outline" id="ontario-header-nav-toggler" aria-controls="ontario-navigation" aria-label="fermer">
                    <svg class="ontario-icon" focusable="false" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                        <use xlink:href="#ontario-icon-close"></use>
                    </svg>
                    <span>Sujets</span>
                </button>
                <div class="ontario-navigation__container">
                    <ul>
                        <li class="ontario-show-for-small-only"><a href="#">Lien
                                1</a></li>
                        <li class="ontario-show-for-small-only"><a href="#">Lien
                                2</a></li>
                        <li class="ontario-hide-for-large"><a href="#">Lien
                                3</a></li>
                        <li class="ontario-hide-for-large"><a href="#">Lien
                                4</a></li>
                        <li class="ontario-hide-for-large"><a href="#">Lien
                                5</a></li>
                        <li><a href="#">Lien 6</a></li>
                        <li><a href="#">Lien 7</a></li>
                        <li><a href="#">Lien 8</a></li>
                    </ul>
                </div>
            </nav>
        </div>
{% else %}
<div class="ontario-header__container">
        <header class="ontario-header" id="ontario-header">
            <div class="ontario-row">
                <div class="ontario-header__logo-container ontario-columns ontario-small-2 ontario-medium-4 ontario-large-3">
                    <a href="https://www.ontario.ca/fr/page/gouvernement-de-lontario">
                        <img class="ontario-show-for-medium" src="{{ globals.siteRoot }}{{ globals.designSystemRoot }}/logos/ontario-logo--desktop.svg" alt="Gouvernement de l’Ontario" />
                        <img class="ontario-show-for-small-only" src="{{ globals.siteRoot }}{{ globals.designSystemRoot }}/logos/ontario-logo--mobile.svg" alt="Gouvernement de l’Ontario" />
                    </a>
                </div>

                <form name="searchForm" id="ontario-search-form-container" onsubmit="return false" class="ontario-header__search-container ontario-columns ontario-small-10 ontario-medium-offset-3 ontario-medium-6 ontario-large-offset-0 ontario-large-6" novalidate>
                    <label for="ontario-search-input-field" class="ontario-show-for-sr">Rechercher</label>
                    <input type="text" name="search" id="ontario-search-input-field" autocomplete="off" aria-autocomplete="none" class="ontario-input ontario-header__search-input" required />
                    <input class="ontario-header__search-reset" id="ontario-search-reset" type="reset" value="" aria-label="Vider le champ" />
                    <button class="ontario-header__search-submit" id="ontario-search-submit" type="submit" onclick="doSearch()">
                        <span class="ontario-show-for-sr">Soumission</span>
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-search"></use>
                        </svg>
                    </button>
                </form>
                <div class="ontario-header__nav-right-container ontario-columns ontario-small-10 ontario-medium-8 ontario-large-3">
                    <a href="{{ globals.siteRoot }}{{ en_page_url }}" class="ontario-header__language-toggler ontario-header-button ontario-header-button--without-outline">
                        <abbr title="English" class="ontario-show-for-small-only">
                            EN
                        </abbr>
                        <span class="ontario-show-for-medium">
                            English
                        </span>
                    </a>

                    <button type="button" class="ontario-header__search-toggler ontario-header-button ontario-header-button--without-outline ontario-hide-for-large" id="ontario-header-search-toggler" aria-controls="ontario-search-form-container">
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-search"></use>
                        </svg>
                        <span class="ontario-show-for-medium ontario-show">
                            Rechercher
                        </span>
                    </button>

                    <button type="button" class="ontario-header__menu-toggler ontario-header-button ontario-header-button--with-outline" id="ontario-header-menu-toggler" aria-controls="ontario-navigation" aria-label="ouvrir les sujets">
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-menu"></use>
                        </svg>

                        <span>Sujets</span>
                    </button>
                </div>
                <div class="ontario-header__search-close-container ontario-columns ontario-small-2 ontario-medium-3">
                    <button type="button" class="ontario-header__search-close ontario-header-button ontario-header-button--without-outline" id="ontario-header-search-close" aria-label="fermer la barre de recherche">
                        <span aria-hidden="true">fermer</span>
                        <svg class="ontario-icon" focusable="false" sol:category="primary" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                            <use xlink:href="#ontario-icon-close"></use>
                        </svg>
                    </button>
                </div>
            </div>
        </header>
        <nav class="ontario-navigation" id="ontario-navigation">
            <button type="button" class="ontario-header__menu-toggler ontario-header-button ontario-header-button--with-outline" id="ontario-header-nav-toggler" aria-controls="ontario-navigation" aria-label="fermer">
                <svg class="ontario-icon" focusable="false" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                    <use xlink:href="#ontario-icon-close"></use>
                </svg>
                <span>Sujets</span>
            </button>
            <div class="ontario-navigation__container">
                <ul>
                    {% include "core/_header_fr_nav-menu-items.njk" %}
                </ul>
            </div>
        </nav>
    </div>
{% endif %}